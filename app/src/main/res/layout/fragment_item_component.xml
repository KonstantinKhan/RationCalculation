<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/srl_item_component"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:dragEdge="right"
    app:mode="same_level">

    <LinearLayout
        android:id="@+id/delete_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_delete_product_component"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/button_outline"
            android:src="@drawable/ic_delete_red_48dp"
            android:translationZ="6dp" />

        <ImageButton
            android:id="@+id/btn_edit_product_component"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/button_outline"
            android:src="@drawable/ic_edit_yellow_48dp"
            android:translationZ="6dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_values_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/my_rect"
            android:orientation="vertical"
            android:padding="4dp"
            android:translationZ="6dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_search_name_component"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/et_search_weight_product_component"
                    tools:text="Наименование продукта" />

                <EditText
                    android:id="@+id/et_search_weight_product_component"
                    android:layout_width="54dp"
                    android:layout_height="36dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="4"
                    android:textSize="14sp" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="К: " />

                <TextView
                    android:id="@+id/tv_search_calories_component"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="110" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" ккал.   " />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Б: " />

                <TextView
                    android:id="@+id/tv_search_proteins_component"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="110" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" г.   " />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Ж: " />

                <TextView
                    android:id="@+id/tv_search_fats_component"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="110" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" г.   " />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" У: " />

                <TextView
                    android:id="@+id/tv_search_carbohydrates_component"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="110" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" г." />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</com.chauthai.swipereveallayout.SwipeRevealLayout>