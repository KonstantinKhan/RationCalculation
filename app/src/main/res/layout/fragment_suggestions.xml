<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_values_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_suggestion_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Наименование продукта" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="К: " />

            <TextView
                android:id="@+id/tv_suggestion_product_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="110" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ккал.   " />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Б: " />

            <TextView
                android:id="@+id/tv_suggestion_product_proteins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="110" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" г.   " />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Ж: " />

            <TextView
                android:id="@+id/tv_suggestion_product_fats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="110" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" г.   " />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" У: " />

            <TextView
                android:id="@+id/tv_suggestion_product_carbohydrates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="110" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" г." />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"/>

</LinearLayout>